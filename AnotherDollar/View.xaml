<Window x:Class="MPP.AnotherDollar.View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:AD="clr-namespace:MPP.AnotherDollar"
        Title="Another Day, Another Dollar" Height="119" Width="266" Closing="Window_Closing" Name="MainView">
    <Window.Resources>
        <AD:DateTimeConverter x:Key="MyDateTimeConverter" />
    </Window.Resources>
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="50,0" >
            <Label Content="Day's End" Height="28" HorizontalAlignment="Stretch"  VerticalAlignment="Center"/>
            <TextBox Height="23" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" Text="{Binding Path=EndTime, Converter={StaticResource MyDateTimeConverter}, Mode=TwoWay}" KeyDown="TextBox_KeyDown" Name="TextBox_DaysEnd" />
        </StackPanel>        
        <Label Margin="20" Content="{Binding Path=PercentString}" Height="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </StackPanel>
</Window>